<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pokertable"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/black"
        android:textAlignment="center"
        android:fontFamily="@font/redressed"
        android:textColor="@color/black"
        android:textSize="125sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jack"
        android:textAlignment="center"
        android:fontFamily="@font/redressed"
        android:textColor="@color/black"
        android:textSize="125sp"
        android:layout_marginTop="-100dp"
        app:layout_constraintTop_toBottomOf="@id/title1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/play_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title2"
        android:layout_marginTop="25dp"
        android:text="@string/play_button_text"
        android:textSize="50sp"
        android:fontFamily="@font/redressed"
        android:backgroundTint="@color/black" />

    <Button
        android:id="@+id/scoreboard_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/play_button"
        android:layout_marginTop="25dp"
        android:text="@string/scoreboard_button_text"
        android:textSize="35sp"
        android:fontFamily="@font/redressed"
        android:backgroundTint="@color/black" />

    <Button
        android:id="@+id/help_button"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreboard_button"
        android:layout_marginTop="25dp"
        android:text="@string/help_button_text"
        android:textSize="50sp"
        android:fontFamily="@font/redressed"
        android:backgroundTint="@color/black" />
</androidx.constraintlayout.widget.ConstraintLayout>